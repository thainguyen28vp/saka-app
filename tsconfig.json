{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./app/*"],
      "@animated": ["./app/common/animated/index"],
      "@common": ["./app/common/index"],
      "@common/*": ["./app/common/*"],
      "@component": ["./app/components/index"],
      "@component/*": ["./app/components/*"],
      "@config": ["./app/config/index"],
      "@config/*": ["./app/config/*"],
      "@redux/*": ["./app/redux/slices/*"],
      "@screen/*": ["./app/screens/*"],
      "@api": ["./app/service/network/api/index"],
      "@theme": ["./app/theme/index"],
      "@theme/*": ["./app/theme/*"],
      "@R": ["./app/assets/R.ts"],
      "@util": ["./app/utils/index"],
      "@util/*": ["./app/utils/*"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
